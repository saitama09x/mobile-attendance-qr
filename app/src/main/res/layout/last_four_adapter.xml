<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout  
            android:layout_width="match_parent" 
		        android:layout_height="wrap_content"        
            android:orientation="vertical"  
            android:id="@+id/click_line"          
		>

  
    <RelativeLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"      
        >

        <TextView
            android:id="@+id/emp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="#000000" 
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="20"             
            android:textAllCaps="true"/>
        
        <TextView
            android:id="@+id/emp_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content" 
            android:textColor="#000000" 
            android:textStyle="bold"
            android:text="emp name"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/emp_id"
           />
        
   <LinearLayout android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:id="@+id/datetime"
        android:layout_toRightOf="@+id/emp_name"
        >

    <TextView
            android:id="@+id/date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="#000000" 
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="7dp"
            android:textAllCaps="true"
            android:text="2016-01-01"
            />

        <TextView
            android:id="@+id/time_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="#000000" 
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="7dp"
            android:textAllCaps="true"
            android:text="10:00:00"
            />

         <TextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="#000000" 
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="7dp"
            android:textAllCaps="true"  
            android:text="IN"         
            />    

    </LinearLayout>
       


  <TextView
    android:id="@+id/project_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000"  
    android:textStyle="bold" 
    android:textSize="12dp"
    android:layout_marginLeft="7dp"
    android:layout_marginBottom="10dp"
    android:textAllCaps="true"
    android:layout_below="@+id/datetime"  
    android:layout_toRightOf="@+id/emp_name"   
    android:text="Project:" 
  />
       

  </RelativeLayout>

  <RelativeLayout android:layout_width="wrap_content" 
        android:layout_height="wrap_content"   
      >

      <TextView
          android:id="@+id/sync_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#000000"   
          android:layout_marginBottom="10dp"     
          android:layout_centerHorizontal="true"
          android:text="UNSYNC" 
        />

         <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"          
          android:background="#000000"
          android:padding="2dp"
          android:paddingBottom="10dp"
          android:paddingTop="10dp" 
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/sync_status"/>      


      </RelativeLayout>


</LinearLayout>
		
</ScrollView>			