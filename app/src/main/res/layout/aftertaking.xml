<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" 
android:layout_width="match_parent"
android:layout_height="match_parent" 
xmlns:app="http://schemas.android.com/apk/res-auto" 
>

<LinearLayout 
android:layout_width="match_parent"
android:layout_height="match_parent" 
android:orientation="vertical" >

<RelativeLayout 
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#2B65EC"
android:paddingBottom="10dp"
>

<ImageView 
android:layout_width="wrap_content"
android:layout_height="50dp"
android:layout_marginTop="10dp"
android:layout_marginLeft="10dp"
android:src="@drawable/patrila_logo"
android:id="@+id/logo"
android:layout_alignParentLeft="true"
/>

<TextView 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Patrila DTR"
android:layout_marginLeft="10dp"
android:layout_marginTop="10dp"
android:textColor="#FFFFFF"
android:textSize="25dp"
android:layout_toRightOf="@+id/logo"
/>


<ImageView 
android:layout_width="wrap_content"
android:layout_height="40dp"
android:layout_marginTop="10dp"
android:layout_marginRight="10dp"
android:src="@drawable/new_back_btn"
android:layout_toLeftOf="@+id/go_home"
android:onClick="dtrlist"
/>

<ImageView 
android:layout_width="wrap_content"
android:layout_height="40dp"
android:layout_marginTop="10dp"
android:layout_marginRight="30dp"
android:src="@drawable/new_home_btn"
android:id="@+id/go_home"
android:layout_alignParentRight="true"
android:onClick="goHome"
/>

</RelativeLayout>


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content" 
>

<TextView 
android:id="@+id/emp_name_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="15dp"
android:text="Operator/Employee Name: "
android:textColor="#000000"
android:layout_centerHorizontal="true"
/>

<TextView
android:id="@+id/emp_name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/emp_name_label"
android:layout_centerHorizontal="true"
android:paddingBottom="10dp"            
android:textColor="#000000"
android:textSize="15dp" />

</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="2dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:background="#000000"
android:padding="2dp"
android:paddingBottom="10dp"
android:paddingTop="10dp" />

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="10dp" >

<TextView
android:id="@+id/emp_id_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"
android:text="ID No. "
android:textColor="#000000"
android:textSize="15dp" />

<TextView
android:id="@+id/emp_id"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/emp_id_label"
android:layout_centerHorizontal="true"
android:layout_marginBottom="10dp"
android:textColor="#000000"
android:textSize="15dp" />

</RelativeLayout>  

<View
android:layout_width="match_parent"
android:layout_height="2dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:background="#000000"
android:padding="2dp"
android:paddingBottom="10dp"
android:paddingTop="10dp" />

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp" >

<TextView
android:id="@+id/emp_time_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"
android:text="Time"
android:textColor="#000000"
android:textSize="15dp" />    

<LinearLayout 
android:id="@+id/time_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_below="@+id/emp_time_label"
android:gravity="center_horizontal">

<TextView
android:id="@+id/emp_date"
android:layout_width="wrap_content"
android:layout_height="wrap_content"            
android:layout_marginBottom="10dp"
android:textColor="#000000"
android:textSize="15dp" />

<TextView
android:id="@+id/emp_time"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
android:textColor="#000000"
android:textSize="15dp" />

</LinearLayout>

<TextView
android:id="@+id/check_type"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/time_layout"
android:layout_centerHorizontal="true"
android:layout_marginBottom="10dp"
android:textColor="#000000"
android:textSize="15dp" />

</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="2dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:background="#000000"
android:padding="2dp"
android:paddingBottom="10dp"
android:paddingTop="10dp" />

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp" >

<ImageView
android:layout_width="100dp"
android:layout_height="150dp"
android:id="@+id/picture"
android:layout_centerHorizontal="true" />


</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="2dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:background="#000000"
android:padding="2dp"
android:paddingBottom="10dp"
android:paddingTop="10dp" />

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp" >

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/hashcode_label"
android:text="Ticket Code:"
android:layout_centerHorizontal="true" 
android:textSize="15dp"/>     

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/hashcode"
android:layout_centerHorizontal="true" 
android:layout_below="@+id/hashcode_label"
android:textSize="15dp"/>


</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="2dp"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:background="#000000"
android:padding="2dp"
android:paddingBottom="10dp"
android:paddingTop="10dp" />

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp" >

<TextView
android:id="@+id/remarks_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"
android:text="Remarks "
android:textColor="#000000"
android:textSize="15dp" />

<TextView
android:id="@+id/remarks"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/remarks_label"
android:layout_centerHorizontal="true"
android:layout_marginBottom="10dp"
android:textColor="#000000"
android:textSize="15dp" />

<Button 
android:id="@+id/edit_remarks"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/remarks"
android:layout_marginBottom="10dp"
android:layout_centerHorizontal="true"
android:onClick="edit_remarks"
android:text="Edit Remarks"
/>

</RelativeLayout> 

</LinearLayout>
</ScrollView>